{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "lib": ["es2016", "dom"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
